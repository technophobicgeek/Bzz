<div class="pageTitle">
  <h1>LoveBzz</h1>
</div>

<script src="/public/js/application.js" type="text/javascript"></script>

<% if $is_device_setup == false %>
  <br>
  <br>
  <div class="content">
    <h2>
      <span class="title">Vibe setup</span>
    </h2>
  </div>
  <br>
  <br>
  <div class="toolbar">
    <div class="leftItem">
      <a href="<%= url_for :controller => :Session, :action => :select_bluetooth_channel%>">Bluetooth</a>
    </div>
  </div>
  <br>
  <div class="toolbar">
    <div class="leftItem">
      <!--<a href="">Audio</a>-->
      <a href="<%= url_for :controller => :Session, :action => :select_test_channel%>">Audio</a>
    </div>
  </div>
  <br>
  <div class="toolbar">
    <div class="leftItem">
      <a href="<%= url_for :controller => :Session, :action => :select_test_channel%>">Test</a>
    </div>
  </div>

<% else %>
  <div id="#dummy"></div>

  <br>
  <br>
  <p/>
  <div class="toolbar">
    <div class="centerItem regularButton">
      <a href="#dummy" onClick="sendMessage('med');">        
        Bzz me!
      </a>
    </div>
  </div>
  <p/>
  <div class="toolbar">
    <div class="centerItem regularButton">
      <a href="<%= url_for :controller => :Session, :action => :start_session %>">
        Session 
      </a>
    </div>
  </div>

  <% if Session.count > 0 %>

    <p/>
    <div class="toolbar">
      <div class="centerItem regularButton">
        <a href="<%= url_for :controller => :Session, :action => :index %>">
          Patterns 
        </a>
      </div>
    </div>

  <% end %>

<% end %>
