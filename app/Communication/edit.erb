<div class="pageTitle">
  <h1>Edit <%= @communication.id %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @communication.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @communication.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @communication.object %>"/>
    <ul>
      
          <li>
            <label for="communication[id]" class="fieldLabel">Id</label>
            <input type="text" name="communication[id]" value="<%= @communication.id %>" <%= placeholder( "Id" ) %> />
          </li>
      
          <li>
            <label for="communication[name]" class="fieldLabel">Name</label>
            <input type="text" name="communication[name]" value="<%= @communication.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
          <li>
            <label for="communication[type]" class="fieldLabel">Type</label>
            <input type="text" name="communication[type]" value="<%= @communication.type %>" <%= placeholder( "Type" ) %> />
          </li>
      
          <li>
            <label for="communication[description]" class="fieldLabel">Description</label>
            <input type="text" name="communication[description]" value="<%= @communication.description %>" <%= placeholder( "Description" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>